---
import Card from "../components/Card/index.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Layout from "../layouts/Layout.astro";
import IntroCard from "../components/HomeGrid/IntroCard.astro";
import AboutCard from "../components/HomeGrid/AboutCard.astro";
import ContactCard from "../components/HomeGrid/ContactCard.astro";
import SkillsCard from "../components/HomeGrid/SkillsCard.astro";
import NowCard from "../components/HomeGrid/NowCard.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutCard />
    <ContactCard />
    <SkillsCard />
    <NowCard />

    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1"
      title="Último video"
      href="https://www.youtube.com/watch?v=nPdJ6Hkn-bE"
      colorText="text-white-900"
    />
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-2 flex gap-4"
      title="Blog"
      href="/blog"
    />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2024 · Creado con ♥️ usando <a
          href="https://astro.build/"
          target="_blank"
          class="text-indigo-500">Astro</a
        > by Stiven.
      </p>
    </Card>
  </main>
</Layout>
